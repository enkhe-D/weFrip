<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Admin de WeFrip'{% endblock %}</title>
		<link rel="shortcut icon" href="{{ asset('img/wefripLogo.png') }}" type="image/x-icon">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
		<link rel="stylesheet" href="https://unpkg.com/@adminkit/core@latest/dist/css/app.css">
        <link rel="stylesheet" href="{{asset('css/app.css') }}">
    </head>
    <body>
    <div class="wrapper">
		<nav id="sidebar" class="sidebar js-sidebar">
			<div class="sidebar-content js-simplebar">
				<a class="sidebar-brand" href="{{ path('app_home') }}">
                <span class="align-middle">WeFrip' <i class="fa-solid fa-house"></i></span>
                </a>

				<ul class="sidebar-nav">
					<li class="sidebar-item active">
						<a class="sidebar-link" href="{{ path('app_admin_dashboard') }}">
                        <i class="align-middle" data-feather="sliders"></i> <span class="align-middle">Dashboard</span>
                        </a>
					</li>

                    <li class="sidebar-header">
						Pages
					</li>

					<li class="sidebar-item">
						<a class="sidebar-link" href="{{ path('app_admin_event_index') }}">
                        <i class="align-middle" data-feather="map-pin"></i> <span class="align-middle">Evénements</span>
                        </a>
					</li>

					<li class="sidebar-item">
						<a class="sidebar-link" href="{{ path('app_admin_tutorial_index') }}">
                        <i class="align-middle" data-feather="video"></i> <span class="align-middle">Tutoriels</span>
                        </a>
					</li>

					<li class="sidebar-item">
						<a class="sidebar-link" href="{{ path('app_admin_category_index') }}">
                        <i class="align-middle" data-feather="copy"></i> <span class="align-middle">Catégories</span>
                        </a>
					</li>

					<li class="sidebar-item">
						<a class="sidebar-link" href="{{ path('app_admin_user_index') }}">
                        <i class="align-middle" data-feather="users"></i> <span class="align-middle">Utilisateurs</span>
                        </a>
					</li>
				</ul>
			</div>
		</nav>

   <div class="container-fluid bg-white">
			<nav class="navbar navbar-expand navbar-light navbar-bg">
				<a class="sidebar-toggle js-sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>

				<div class="navbar-collapse collapse">
					<ul class="navbar-nav navbar-align">
						<li class="nav-item dropdown">
							<a class="nav-link d-none d-sm-inline-block" href="{{ path('app_profil') }}" data-bs-toggle="dropdown">
                                {{ app.user.userIdentifier }}
                            </a>
						</li>

						{# <li class="nav-item dropdown">
                            <a class="nav-link d-none d-sm-inline-block" href="{{ path('app_logout') }}" data-bs-toggle="dropdown">
                            <i data-feather="log-out"></i>
                            </a>
                        </li> #}
						<li class="nav-item">
							{# si l utilisateur est authentifié et est admin #} 
							<a href="{{ path('app_logout') }}" class="nav-link d-flex flex-column align-items-center py-2">
							<i data-feather="log-out"></i>
							</a>
                        </li>
					</ul>
				</div>
			</nav>

        <main class="content">
        {% block body %}{% endblock %}
        </main>

			<footer class="footer">
				<div class="container-fluid">
					<div class="row text-muted">
						<div class="col-6 text-start">
							<p class="mb-0">
								<a class="text-muted" href="#" target="_blank"><strong>&copy WeFrip' -  2023</strong></a>
							</p>
						</div>
						<div class="col-6 text-end">
							<ul class="list-inline">
								<li class="list-inline-item">
									<a class="text-muted" href="https://adminkit.io/" target="_blank">AdminKit</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</footer>
		</div>
	</div>

	{# documentation SELECT2 et JQUERY #}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
	<script src="{{ asset('js/app.js') }}"></script>
	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
	<script src="https://unpkg.com/@adminkit/core@latest/dist/js/app.js"></script>

	<script src="{{ asset('js/app.js') }}"></script>
	{# Script pour fontawesome #}
    <script src="https://kit.fontawesome.com/862738513d.js" crossorigin="anonymous"></script>
