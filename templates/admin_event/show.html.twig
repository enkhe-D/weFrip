{% extends 'base-backend.html.twig' %}

{% block title %}Evénements - WeFrip'{% endblock %}

{% block body %}
    <h1>Evénements</h1>

    <div class="d-flex flex-row justify-content-between">
    <a href="{{ path('app_admin_event_index') }}" class="btn btn-primary mb-3"><i class="align-middle" data-feather="skip-back"></i></a>
    {{ include('admin_event/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ event.eventName }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.eventDate ? event.eventDate.format('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.eventDescription }}</td>
            </tr>
            <tr>
                <th>Nom de l'image</th>
                <td>{{ event.eventImageName }}</td>
            </tr>
            <tr>
                <th>Image de l'évènement</th>
                <td>{{ event.eventImageFile }}</td>
            </tr>
            <tr>
                <th>Coordonnées (lat)</th>
                <td>{{ event.coordinateLat }}</td>
            </tr>
            <tr>
                <th>Coordonnées (lng)</th>
                <td>{{ event.coordinateLng }}</td>
            </tr>
            <tr>
                <th>Créateur</th>
                <td>{{ event.creator }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ event.eventSlug }}</td>
            </tr>
            <tr>
                <th>Ajouté le</th>
                <td>{{ event.eventUpdatedAt ? event.eventUpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_event_edit', {'id': event.id}) }}" class="btn btn-success mb-3"><i class="align-middle" data-feather="edit-3"></i> Modifier</a>

{% endblock %}
